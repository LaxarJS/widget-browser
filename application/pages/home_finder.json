{
   "layout": "application",
   "areas": {
      "axActivities": [
         {
            "widget": "widget-browser/widget-listing-activity",
            "id": "widgetListing",
            "features": {
               "fileListing": {
                  "applicationUrl": "http://localhost:8081/",
                  "list": [ "build/assets/widget-list.json" ]
               },
               "widgetListing": {
                  "resource": "widgetList"
               }
            }
         }
      ],
      "messages": [
         {
            "widget": "laxar-messages-widget",
            "id": "messages",
            "features": {
               "resource": {
                  "list": [
                     "documentation"
                  ]
               }
            }
         }
      ],
      "content1a": [
         {
            "widget": "widget-browser/widget-browser-widget",
            "id": "widgetBrowser",
            "features": {
               "list": {
                  "resource": "widgetList"
               },
               "select": {
                  "parameter": "widgetId",
                  "parameterList": [ "anchor" ],
                  "information": {
                     "resource": "widgetInformation"
                  },
                  "package": {
                     "resource": "manifest"
                  },
                  "documentation": {
                     "resource": "documentation"
                  },
                  "testRunner": {
                     "resource": "testRunner"
                  }
               }
            }
         }
      ],
      "content1b": [
         {
            "widget": "laxar/ax-markdown-display-widget",
            "id": "documentation",
            "features": {
               "markdown": {
                  "url": "README.md",
                  "parameter": "anchor",
                  "resource": "documentation"
               }
            }
         }
      ],
      "content1c": [
         {
            "widget": "widget-browser/artifact-repository-link-widget",
            "id": "repositoryLink",
            "features": {
               "display": {
                  "resource": "manifest",
                  "i18nHtmlText": "<i class='fa fa-github'></i> On GitHub"
               }
            }
         },
         {
            "widget": "widget-browser/widget-information-widget",
            "id": "widgetInformation",
            "features": {
               "widget": {
                  "resource": "widgetInformation"
               },
               "package": {
                  "resource": "manifest"
               }
            }
         }
      ]
   }
}
