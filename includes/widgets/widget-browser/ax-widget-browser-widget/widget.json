{
  "name": "AxWidgetBrowserWidget",
  "description": "The WidgetBrowserWidget displays a list of all widget and activities and lets the user select one.",
  "integration": {
    "technology": "angular",
    "type": "widget"
  },
  "features": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["list"],
    "properties": {
      "list": {
        "type": "object",
        "description": "Display a selectable list of widgets and activities received through a resource.",
        "required": ["resource"],
        "properties": {
          "title": {
            "default": {
              "htmlLabel": "Widgets"
            },
            "type": "object",
            "properties": {
              "htmlLabel": {
                "type": "string",
                "description": "Title for the selectable list."
              }
            }
          },
          "resource": {
            "type": "string",
            "description": "The topic of the resource with the list.",
            "format": "topic"
          }
        }
      },
      "select": {
        "type": "object",
        "description": "Select a widget from the list and publish resources with data of the selected widget.",
        "required": ["parameter"],
        "properties": {
          "parameter": {
            "type": "string",
            "description": "The place parameter for the flow definition.",
            "format": "topic"
          },
          "parameterList": {
            "type": "array",
            "description": "A list with place parameters which are overwritten with an empty string.",
            "default": [],
            "items": {
              "type": "string",
              "description": "A place parameter to reset.",
              "format": "topic"
            }
          },
          "information": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "string",
                "description": "The topic of the resource with the widget.json content.",
                "format": "topic"
              }
            }
          },
          "bower": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "string",
                "description": "The topic of the resource with the bower.json content.",
                "format": "topic"
              }
            }
          },
          "documentation": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "string",
                "description": "The topic of the resource with the documentation markdown url.",
                "format": "topic"
              },
              "sources": {
                "type": "array",
                "description": "A list with files with markdown text to use as source for the documentation resource.",
                "default": [
                  "README.md",
                  "SPECIFICATION.md"
                ],
                "items": {
                  "type": "string",
                  "description": "A filename to search for a file with markdown text."
                }
              }
            }
          },
          "testRunner": {
            "type": "object",
            "properties": {
              "resource": {
                "type": "string",
                "description": "The topic of the resource with the url to the test runner.",
                "format": "topic"
              }
            }
          }
        }
      }
    }
  }
}
